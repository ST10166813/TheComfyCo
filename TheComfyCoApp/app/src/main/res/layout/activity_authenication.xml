<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".AuthenicationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back button -->
        <ImageView
            android:id="@+id/btnBack2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Very large logo (centered) -->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/btnBack2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginTop="8dp" />

        <!-- EMAIL (outlined like Add Product page) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailTil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="EMAIL"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@android:color/darker_gray"
            app:boxBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:padding="12dp"
                android:fontFamily="@font/tenor_sans_reg"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- PASSWORD (outlined, with toggle) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordTil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="PASSWORD"
            app:endIconMode="password_toggle"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@android:color/darker_gray"
            app:boxBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/emailTil"
            app:layout_constraintStart_toStartOf="@id/emailTil"
            app:layout_constraintEnd_toEndOf="@id/emailTil">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:padding="12dp"
                android:fontFamily="@font/tenor_sans_reg"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Forgot Password -->
        <Button
            android:id="@+id/forgotBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/tenor_sans_reg"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/passwordTil"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- LOGIN BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="LOGIN"
            android:textColor="@android:color/white"
            android:fontFamily="@font/tenor_sans_reg"
            android:background="@drawable/button_bg"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/forgotBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- GOOGLE SIGN-IN (Material attrs use app: namespace) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/googleSignInBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="Sign in with Google"
            android:textColor="@color/black"
            android:fontFamily="@font/tenor_sans_reg"
            android:backgroundTint="@color/white"
            app:strokeColor="@android:color/darker_gray"
            app:icon="@drawable/icon_google"
            app:iconPadding="12dp"
            app:iconGravity="textStart"
            app:iconTint="@null"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/loginBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
