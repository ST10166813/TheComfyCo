<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:title="@string/product_detail_title"
        app:titleCentered="true"
        app:titleTextColor="?attr/colorOnSurface"
        app:titleTextAppearance="@style/Toolbar.Tenor"
        app:navigationIconTint="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom bar with Add to Cart -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvBottomPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R 0.00"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:fontFamily="@font/tenor_sans_reg" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_add_to_cart"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                app:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                app:iconGravity="textStart" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Scrollable content between toolbar and bottom bar -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="?attr/colorSurface"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Product image with depth -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProductImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="18dp"
                app:cardElevation="10dp"
                app:strokeColor="?attr/colorSurfaceVariant"
                app:strokeWidth="1dp">

                <ImageView
                    android:id="@+id/imgUserProduct"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:scaleType="centerCrop"
                    android:background="?attr/colorSurface"
                    android:contentDescription="@string/app_name" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvUserProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/tenor_sans_reg"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/tvUserProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/tenor_sans_reg"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/tvUserProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/tenor_sans_reg"
                android:lineSpacingExtra="2dp"
                android:paddingBottom="16dp" />

            <!-- Sizes title -->
            <TextView
                android:id="@+id/tvSizesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_available_sizes"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/tenor_sans_reg"
                android:paddingBottom="6dp" />

            <!-- Size chips -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupSizes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="2dp"
                android:paddingBottom="24dp" />

            <!-- Quantity label -->
            <TextView
                android:id="@+id/tvQtyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_quantity_label"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/tenor_sans_reg"
                android:paddingBottom="6dp" />

            <!-- Quantity row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="24dp">

                <!-- MINUS -->
                <TextView
                    android:id="@+id/btnQtyMinus"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:background="@drawable/bg_qty_button"
                    android:text="-"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/tenor_sans_reg"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:text="1"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/tenor_sans_reg" />

                <!-- PLUS -->
                <TextView
                    android:id="@+id/btnQtyPlus"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:background="@drawable/bg_qty_button"
                    android:text="+"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/tenor_sans_reg"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
