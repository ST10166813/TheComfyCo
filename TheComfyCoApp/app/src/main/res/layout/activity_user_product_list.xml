<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProductListActivity">

    <!-- ðŸ”¹ Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:navigationIconTint="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Big heading -->
    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/tenor_sans_reg"
        android:text="@string/products_list_heading"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subheading -->
    <TextView
        android:id="@+id/tvSubHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/tenor_sans_reg"
        android:text="@string/products_list_subheading"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearchList"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusTopStart="28dp"
        app:boxCornerRadiusTopEnd="28dp"
        app:boxCornerRadiusBottomStart="28dp"
        app:boxCornerRadiusBottomEnd="28dp"
        app:boxBackgroundColor="?attr/colorSurface"
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/tvSubHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearchList"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/search"
            android:paddingStart="6dp"
            android:fontFamily="@font/tenor_sans_reg"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurfaceVariant"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Product grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUserProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tilSearchList"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_product" />

    <!-- Loading spinner -->
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerViewUserProducts"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewUserProducts"
        app:layout_constraintStart_toStartOf="@id/recyclerViewUserProducts"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewUserProducts" />

    <!-- Empty / Error state -->
    <TextView
        android:id="@+id/tvState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:fontFamily="@font/tenor_sans_reg"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/recyclerViewUserProducts"
        app:layout_constraintStart_toStartOf="@id/recyclerViewUserProducts"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewUserProducts" />

</androidx.constraintlayout.widget.ConstraintLayout>
