<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Title -->
    <TextView
        android:id="@+id/tvCheckoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tenor_sans_reg"
        android:text="@string/checkout_title"
        android:textColor="?attr/colorOnBackground"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- ORDER SUMMARY CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvCheckoutTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:id="@+id/tvSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkout_summary_title"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:letterSpacing="0.12"
                android:fontFamily="@font/tenor_sans_reg"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/tvOrderSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/checkout_summary_default"
                android:textSize="12sp"
                android:fontFamily="@font/tenor_sans_reg"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CARD DETAILS CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCheckout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Instruction -->
            <TextView
                android:id="@+id/tvCheckoutSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkout_instruction"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:fontFamily="@font/tenor_sans_reg"
                android:letterSpacing="0.12"
                android:textColor="?attr/colorOnBackground" />

            <!-- CARD NAME -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/checkout_card_name_label"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:fontFamily="@font/tenor_sans_reg"
                android:textColor="?attr/colorOnBackground" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundMode="outline"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCardName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/checkout_card_name_hint"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/tenor_sans_reg"
                    android:maxLength="30" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- CARD NUMBER -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/checkout_card_number_label"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:fontFamily="@font/tenor_sans_reg"
                android:textColor="?attr/colorOnBackground" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundMode="outline"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="number"
                    android:hint="@string/checkout_card_number_hint"
                    android:background="@android:color/transparent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/tenor_sans_reg"
                    android:maxLength="19" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Expiry + CVV row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <!-- EXPIRY -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/checkout_expiry_label"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/tenor_sans_reg"
                        android:textColor="?attr/colorOnBackground" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxBackgroundMode="outline"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etExpiry"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="@string/checkout_expiry_hint"
                            android:background="@android:color/transparent"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:fontFamily="@font/tenor_sans_reg"
                            android:maxLength="7" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <!-- CVV -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/checkout_cvv_label"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/tenor_sans_reg"
                        android:textColor="?attr/colorOnBackground" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxBackgroundMode="outline"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCvv"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="numberPassword"
                            android:hint="@string/checkout_cvv_hint"
                            android:background="@android:color/transparent"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/tenor_sans_reg"
                            android:maxLength="3" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- PAY button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPay"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:text="@string/checkout_pay_btn"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:fontFamily="@font/tenor_sans_reg"
                app:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                app:cornerRadius="999dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
