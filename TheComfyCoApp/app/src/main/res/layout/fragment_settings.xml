<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/settingsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            app:title="@string/settings_title"
            app:titleCentered="true"
            app:titleTextColor="?attr/colorOnSurface"
            app:titleTextAppearance="@style/TextAppearance.Comfy.ToolbarTitle" />

        <!-- LANGUAGE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_language"
            android:textStyle="bold"
            android:fontFamily="@font/tenor_sans_reg"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginTop="18dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilLanguage"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:boxCornerRadiusTopStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="24dp"
            app:endIconMode="dropdown_menu"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxBackgroundColor="?attr/colorSurfaceVariant">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/actLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:background="@null"
                android:fontFamily="@font/tenor_sans_reg"
                android:paddingVertical="10dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurface"
                android:backgroundTint="@android:color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- TEXT SIZE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/tenor_sans_reg"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginTop="18dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTextSize"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:boxCornerRadiusTopStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="24dp"
            app:endIconMode="dropdown_menu"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxBackgroundColor="?attr/colorSurfaceVariant">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/actTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:background="@null"
                android:fontFamily="@font/tenor_sans_reg"
                android:paddingVertical="10dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurface"
                android:backgroundTint="@android:color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- DISPLAY MODE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_display_mode"
            android:textStyle="bold"
            android:fontFamily="@font/tenor_sans_reg"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginTop="18dp" />

        <RadioGroup
            android:id="@+id/rgMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_light"
                android:checked="true"
                android:fontFamily="@font/tenor_sans_reg"
                android:textColor="?attr/colorOnBackground"
                android:buttonTint="?attr/colorPrimary" />

            <RadioButton
                android:id="@+id/rbDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_dark"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/tenor_sans_reg"
                android:textColor="?attr/colorOnBackground"
                android:buttonTint="?attr/colorPrimary" />
        </RadioGroup>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
