<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_id_label"
            android:textStyle="bold"
            android:fontFamily="@font/tenor_sans_reg"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvOrderCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_customer_label"
            android:fontFamily="@font/tenor_sans_reg"
            android:textSize="13sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvOrderTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_total_label"
            android:fontFamily="@font/tenor_sans_reg"
            android:textSize="13sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_status_label"
            android:fontFamily="@font/tenor_sans_reg"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
