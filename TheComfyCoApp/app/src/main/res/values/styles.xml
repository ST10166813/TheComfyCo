<resources>

    <!-- Style for Navigation Drawer text -->
    <style name="DrawerItemText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/tenor_sans_reg</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="TextAppearance.Comfy.ToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/tenor_sans_reg</item>
    </style>
    
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
    </style>

        <style name="ComfyShape" parent="ShapeAppearance.Material3.MediumComponent">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">16dp</item>
        </style>

        <style name="ComfyShape.Small" parent="ShapeAppearance.Material3.SmallComponent">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">12dp</item>
        </style>

        <style name="ComfyShape.Large" parent="ShapeAppearance.Material3.LargeComponent">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">24dp</item>
        </style>
    <!-- res/values/styles.xml -->
    <style name="ToolbarTitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/tenor_sans_reg</item>
        <item name="android:fontFamily">@font/tenor_sans_reg</item>
        <item name="android:textSize">20sp</item>   <!-- tweak if you want -->
        <item name="android:textStyle">normal</item>
    </style>




</resources>
