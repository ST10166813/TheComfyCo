<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App theme with DayNight support -->
    <style name="Theme.TheComfyCoApp" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Use semantic colors that will flip via colors.xml + colors-night.xml -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background / surfaces -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Text defaults -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

    </style>

    <!-- Android 12+ Splash Screen -->
    <style name="Theme.TheComfyCoApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.TheComfyCoApp</item>
    </style>

</resources>
