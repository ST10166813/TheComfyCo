<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Day/Night app theme -->
    <style name="Theme.TheComfyCoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- You can set brand colors here if you want -->
        <!-- <item name="colorPrimary">@color/your_primary</item> -->
        <!-- <item name="colorSecondary">@color/your_secondary</item> -->
        <!-- Typography/Shapes etc as needed -->
    </style>

    <!-- Android 12+ SplashScreen API theme -->
    <style name="Theme.TheComfyCoApp.Splash" parent="Theme.SplashScreen">
        <!-- Background for splash screen -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Your animated or static launcher icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>

        <!-- After splash, use the main app theme -->
        <item name="postSplashScreenTheme">@style/Theme.TheComfyCoApp</item>
    </style>

</resources>
